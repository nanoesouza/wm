#Aliases
### É difícil digitar clear
alias clera='clear'
alias claer='clear'
alias clrea='clear'
alias celar='clear'
alias caler='clear'
alias clrae='clear'
alias clrea='clear'
alias clare='clear'

#Addons
alias ls='exa --icons -s type'
alias find='fd'
alias grep='rg'
alias cat='bat --style=auto'
alias ccat='bat --style=plain'
alias vim='nvim'
alias c='z'

#Packages
alias install='sudo pacman -Sy'
alias search='pacman -Ss'
alias upgrade='sudo pacman -Syyu'
alias remove='sudo pacman -Rs'
alias autoremove='sudo pacman -Rcs $(pacman -Qdtq)'

alias ainstall='yay -Syyu'
alias asearch='yay -Ss'
alias aupdate='yay -Syyu'
alias aremove='yay -Rs'

alias finstall='flatpak install flathub'
alias fsearch='flatpak search flathub'
alias fremove='flatpak remove'

#Others
alias ping='ping -i 0.2'
alias code='vscodium'
alias kde-restart='kquitapp5 plasmashell && kstart5 plasmashell'
alias encrypt='ansible-vault encrypt'
alias decrypt='ansible-vault decrypt'

#Git
alias gpush='git push'
alias gpull='git pull'
alias gcommit='git commit'
alias gcheckout='git checkout'
alias gadd='git add'
alias gstatus='git status'
alias gdiff='git diff | bat'
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Fish Shell
alias mkvirtualenv='vf new'
alias workon='vf activate'
alias deactivate='vf deactivate'
